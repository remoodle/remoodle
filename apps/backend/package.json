{
  "name": "@remoodle/backend",
  "version": "1.6.2",
  "main": "index.ts",
  "types": "index.d.ts",
  "scripts": {
    "dev:api": "tsx watch src/services/api/index.ts",
    "dev:notifier": "tsx watch src/services/notifier/index.ts",
    "dev": "run-p dev:*",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ignore-path .gitignore && prettier --check src/",
    "format": "eslint . --fix --ignore-path .gitignore && prettier --write src/",
    "test": "TZ=UTC vitest"
  },
  "dependencies": {
    "@bull-board/api": "^5.23.0",
    "@bull-board/hono": "^5.23.0",
    "@hono/node-server": "^1.10.0",
    "@hono/zod-validator": "^0.2.2",
    "@remoodle/db": "workspace:*",
    "@remoodle/utils": "workspace:*",
    "@total-typescript/shoehorn": "^0.1.2",
    "bullmq": "^5.12.14",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "hono": "^4.5.5",
    "hono-pino-logger": "^1.0.0",
    "hono-rate-limiter": "^0.4.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@remoodle/alert-worker": "workspace:*",
    "@remoodle/eslint-config": "workspace:*",
    "@remoodle/prettier-config": "workspace:*",
    "@remoodle/tsconfig": "workspace:*",
    "@remoodle/types": "workspace:*",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.17",
    "@types/node-cron": "^3.0.11",
    "eslint": "^8.57.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
